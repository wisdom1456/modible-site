{
  "name": "modible",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "new:demo": "node scripts/new-content.js demo",
    "new:essay": "node scripts/new-content.js essay",
    "new:art": "node scripts/new-content.js art",
    "snapshots": "node --loader ts-node/esm scripts/screenshot-sites.ts",
    "snapshots:install": "playwright install chromium"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.17",
    "mdsvex": "^0.11.0",
    "postcss": "^8.4.33",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "playwright": "^1.48.2",
    "ts-node": "^10.9.2"
  }
}
